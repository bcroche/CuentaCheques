@page
@model CuentaCheques.Pages.CuentaModel
@{
}
<div class="text-center">
    <h1 class="text-info">Cuenta Cheques</h1>
    <form method="get">
        <div class="border container" style="padding:30px;">

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Cantidad"></label>
                </div>
                <div class="col-3">
                    <input asp-for="Cantidad" class="form-control" />
                </div>
                <div class="col-6 ">
                    <input type="submit" value="Calcula" class="btn btn-primary form-control" />
                </div>
            </div>

        </div>
        <br />

        @if (Model.Cheques.Count > 0)
        {
            <div id="resultadodiv" class="border container" style="padding:30px;">
                <table class="table-bordered" cellspacing="20">
                    <thead>
                        <tr>
                            <th>Cheque</th>
                            <th>Número</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cheques)
                        {
                            <tr>
                                <td>@item.ValorCheque </td>
                                <td>@item.CantidadCheque </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        }

        <div id="pesosdiv" class="border container" style="padding:30px;">
            <h3 class="text-info">Cheques preferentes</h3>
            <table class="table-bordered" cellspacing="20">
                <tr>
                    <th>Cheque</th>
                    <th>Prioridad</th>
                </tr>
                <tr>
                    <td>@Model.Configuracion.Cheque1Peso </td>
                    <td> <input type="checkbox" name="prioriza1" checked="@(@Model.Configuracion.Cheque1Valor)"> </td>

                </tr>
                <tr>
                    <td>@Model.Configuracion.Cheque2Peso </td>
                    <td> <input type="checkbox" name="prioriza2" checked="@(@Model.Configuracion.Cheque2Valor)"> </td>
                </tr>
                <tr>
                    <td>@Model.Configuracion.Cheque3Peso </td>
                    <td> <input type="checkbox" name="prioriza3" checked="@(@Model.Configuracion.Cheque3Valor)"> </td>
                </tr>

            </table>

    </form>
</div>


</div>
